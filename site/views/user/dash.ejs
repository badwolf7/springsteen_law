					<section class="col-md-4">
						<i class="fa fa-home fa-2x" style="vertical-align: top;"></i> 
						<address style="display:inline-block;"><%= users_list[i].address.home.street1 %><br>
							<% if(users_list[i].address.home.street2 != ''){ %>
							<%= users_list[i].address.home.street2 %><br>
							<% } %>
							<%= users_list[i].address.home.city %>, <%= users_list[i].address.home.state %> <%= users_list[i].address.home.zip %>
						</address>
					</section>
					<% } %>
					<section class="col-md-4">
						<p><i class="fa fa-phone"></i> <%= users_list[i].phone %></p>
					</section>
					<p style="visibility:hidden;">.</p>
				</article>
				<% }} %>
